<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <ui:VisualElement name="ScreenContainer" style="flex-grow: 1; background-color: rgb(32, 32, 40); padding: 0;">
        
        <ui:VisualElement name="TopBar" style="flex-direction: row; height: 90px; background-color: rgba(0, 0, 0, 0.6); align-items: center; justify-content: space-between; padding-left: 20px; padding-right: 20px; border-bottom-width: 2px; border-bottom-color: rgba(255, 255, 255, 0.1);">
            
            <ui:VisualElement style="width: 300px;">
                <ui:Label name="LevelLabel" text="LV. 1" style="color: white; font-size: 20px; -unity-font-style: bold; margin-bottom: 5px;" />
                <ui:ProgressBar name="HpBar" title="HP" high-value="100" style="height: 20px; margin-bottom: 5px; color: white;" />
                <ui:ProgressBar name="StaminaBar" title="STM" high-value="100" style="height: 15px; color: white;" />
            </ui:VisualElement>

            <ui:VisualElement style="flex-direction: row; align-items: center;">
                <ui:VisualElement style="flex-direction: row; align-items: center; margin-right: 30px; background-color: rgba(0,0,0,0.3); padding: 5px 15px; border-radius: 20px;">
                    <ui:Label text="G" style="color: gold; font-size: 24px; -unity-font-style: bold; margin-right: 10px;" />
                    <ui:Label name="ShopGold" text="999,999" style="color: white; font-size: 24px;" />
                </ui:VisualElement>

                <ui:VisualElement style="flex-direction: row; align-items: center; background-color: rgba(0,0,0,0.3); padding: 5px 15px; border-radius: 20px;">
                    <ui:Label text="ðŸ’Ž" style="font-size: 24px; margin-right: 10px;" />
                    <ui:Label name="ShopGem" text="500" style="color: cyan; font-size: 24px;" />
                </ui:VisualElement>
            </ui:VisualElement>

            <ui:Button name="BtnSettings" text="âš™" style="width: 60px; height: 60px; font-size: 40px; color: rgba(255,255,255,0.8); background-color: rgba(255,255,255,0.1); border-width: 0; border-radius: 10px; -unity-font-style: bold;" />
        
        </ui:VisualElement>
        <ui:VisualElement name="TabContainer" style="flex-direction: row; height: 60px; margin-top: 10px; justify-content: center;">
            <ui:Button name="TabShop" text="SHOP" style="flex-grow: 1; margin: 0 5px; background-color: rgb(60, 60, 70); color: white; font-size: 18px; border-width: 0;" />
            <ui:Button name="TabInventory" text="INVENTORY" style="flex-grow: 1; margin: 0 5px; background-color: rgb(60, 60, 70); color: white; font-size: 18px; border-width: 0;" />
            <ui:Button name="TabCraft" text="CRAFT" style="flex-grow: 1; margin: 0 5px; background-color: rgb(60, 60, 70); color: white; font-size: 18px; border-width: 0;" />
            <ui:Button name="TabBattle" text="BATTLE" style="flex-grow: 1; margin: 0 5px; background-color: rgb(100, 40, 40); color: white; font-size: 18px; border-width: 0;" />
        </ui:VisualElement>


        <ui:VisualElement style="flex-grow: 1; padding: 20px;">

            <ui:VisualElement name="ShopContainer" style="flex-grow: 1; display: flex;">
                <ui:VisualElement class="list-wrapper" style="flex-grow: 1; overflow: hidden;">
                    <ui:ScrollView name="ShopScrollView" style="flex-grow: 1;" />
                </ui:VisualElement>
                <ui:VisualElement style="flex-direction: row; justify-content: center; align-items: center; height: 60px;">
                    <ui:Button name="BtnPrev" text="&lt;" style="width: 50px; height: 50px; font-size: 24px;" />
                    <ui:Label name="PageLabel" text="1" style="color: white; font-size: 24px; margin: 0 20px;" />
                    <ui:Button name="BtnNext" text="&gt;" style="width: 50px; height: 50px; font-size: 24px;" />
                </ui:VisualElement>
            </ui:VisualElement>

            <ui:VisualElement name="InventoryContainer" style="flex-grow: 1; display: none;">
                <ui:VisualElement style="flex-direction: row; height: 50px; margin-bottom: 10px;">
                    <ui:Button name="BtnFilterAll" text="ALL" style="flex-grow: 1;" />
                    <ui:Button name="BtnFilterWep" text="WEAPONS" style="flex-grow: 1;" />
                    <ui:Button name="BtnFilterCon" text="CONSUMABLES" style="flex-grow: 1;" />
                    <ui:Button name="BtnNotiLog" text="LOGS" style="width: 80px; background-color: #555;" />
                </ui:VisualElement>
                
                <ui:ScrollView name="InventoryScrollView" style="flex-grow: 1;" />

                <ui:VisualElement style="flex-direction: row; justify-content: center; align-items: center; height: 50px;">
                    <ui:Button name="BtnInvPrev" text="&lt;" style="width: 40px;" />
                    <ui:Label name="InvPageLabel" text="1" style="color: white; margin: 0 10px;" />
                    <ui:Button name="BtnInvNext" text="&gt;" style="width: 40px;" />
                </ui:VisualElement>
            </ui:VisualElement>

            <ui:VisualElement name="CraftContainer" style="flex-grow: 1; display: none;">
                <ui:Label text="CRAFTING STATION" style="color: orange; font-size: 30px; align-self: center; margin-bottom: 20px;" />
                <ui:ScrollView name="CraftScrollView" style="flex-grow: 1;" />
            </ui:VisualElement>

            <ui:VisualElement name="BattleContainer" style="flex-grow: 1; display: none; align-items: center; justify-content: center;">
                <ui:Label text="WILD ZONE" style="color: red; font-size: 40px; margin-bottom: 50px;" />
                <ui:Label name="MonsterName" text="Monster" style="color: white; font-size: 30px;" />
                <ui:ProgressBar name="MonsterHpBar" style="width: 400px; height: 30px; margin-bottom: 50px;" />
                <ui:Button name="BtnAttack" text="ATTACK!" style="width: 200px; height: 80px; font-size: 30px; background-color: rgb(150, 0, 0); color: white;" />
            </ui:VisualElement>

            <ui:VisualElement name="NotiLogPanel" style="position: absolute; top: 60px; right: 0; width: 300px; height: 400px; background-color: rgba(0,0,0,0.9); display: none; border-width: 1px; border-color: white;">
                <ui:Label text="HISTORY" style="color: white; align-self: center; font-size: 18px; padding: 10px;" />
                <ui:ScrollView name="NotiLogList" style="flex-grow: 1; padding: 10px;" />
            </ui:VisualElement>

        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>