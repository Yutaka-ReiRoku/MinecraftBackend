@model MinecraftBackend.Models.PlayerProfile

@{
    ViewData["Title"] = "Player Details";
    // Đảm bảo cast đúng kiểu dữ liệu mới
    var inventory = ViewBag.Inventory as List<MinecraftBackend.Models.GameInventory>;
    var logs = ViewBag.Logs as List<MinecraftBackend.Models.Transaction>; 
}

<div class="container-fluid">
    <div class="glass-card border-info mb-4">
        <div class="d-flex align-items-center">
            <img src="@(Model.AvatarUrl ?? "/images/avatars/default.png")" 
                 class="rounded-circle border border-3 border-warning bg-black shadow" 
                 width="100" height="100" style="object-fit: cover;"
                 onerror="this.src='/images/avatars/default.png'">
            
            <div class="ms-4 flex-grow-1">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h2 class="text-white fw-bold mb-0">@Model.DisplayName</h2>
                        <span class="text-white-50 font-monospace">ID: @Model.CharacterID</span>
                        <div class="mt-2">
                            <span class="badge bg-primary me-2">Lv.@Model.Level</span>
                            <span class="badge bg-secondary me-2">Mode: @Model.GameMode</span>
                            @if (Model.User.Status == "Active")
                            {
                                <span class="badge bg-success">Active Account</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">BANNED</span>
                            }
                        </div>
                    </div>
                    <div class="text-end">
                        <a asp-action="Users" class="btn btn-outline-light btn-sm mb-2"><i class="fas fa-arrow-left me-1"></i> Back</a>
                        <div class="d-flex gap-2">
                             <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary btn-sm"><i class="fas fa-edit me-1"></i> Edit</a>
                             <form asp-action="ToggleUserStatus" method="get">
                                 <input type="hidden" name="id" value="@Model.User.Id" />
                                <button class="btn btn-danger btn-sm"><i class="fas fa-ban me-1"></i> Toggle Ban</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="glass-card h-100">
                <h5 class="text-warning mb-3 border-bottom border-secondary pb-2"><i class="fas fa-chart-bar me-2"></i>Stats & Wallet</h5>
                
                <div class="row g-3 text-center mb-4">
                    <div class="col-6">
                        <div class="p-3 bg-black bg-opacity-25 rounded border border-warning">
                            <i class="fas fa-coins text-warning fa-2x mb-2"></i>
                            <h4 class="m-0 text-white">@Model.Gold.ToString("N0")</h4>
                            <small class="text-white-50">Gold</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-black bg-opacity-25 rounded border border-info">
                            <i class="far fa-gem text-info fa-2x mb-2"></i>
                            <h4 class="m-0 text-white">@Model.Gem.ToString("N0")</h4>
                            <small class="text-white-50">Gem</small>
                        </div>
                    </div>
                </div>

                <ul class="list-group list-group-flush bg-transparent">
                    <li class="list-group-item bg-transparent text-white d-flex justify-content-between">
                        <span><i class="fas fa-heart text-danger me-2"></i>Health</span>
                        <span class="fw-bold">@Model.Health / @Model.MaxHealth</span>
                    </li>
                    <li class="list-group-item bg-transparent text-white d-flex justify-content-between">
                        <span><i class="fas fa-drumstick-bite text-warning me-2"></i>Hunger</span>
                        <span class="fw-bold">@Model.Hunger / 100</span>
                    </li>
                    <li class="list-group-item bg-transparent text-white d-flex justify-content-between">
                        <span><i class="fas fa-star text-success me-2"></i>Exp</span>
                        <span class="fw-bold">@Model.Exp</span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="glass-card h-100 p-0 overflow-hidden">
                <div class="card-header bg-white bg-opacity-10 border-bottom border-secondary pt-3 px-3 pb-3">
                    <ul class="nav nav-tabs card-header-tabs border-0" id="userTabs" role="tablist">
                        <li class="nav-item me-3">
                            <button class="nav-link active text-info bg-transparent border-0 border-bottom border-3 border-info fw-bold m-0 pb-2" 
                                    data-bs-toggle="tab" data-bs-target="#inventory" type="button">
                                <i class="fas fa-box me-2"></i>Inventory (@(inventory?.Count ?? 0))
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link text-secondary bg-transparent border-0 fw-bold m-0 pb-2" 
                                    data-bs-toggle="tab" data-bs-target="#logs" type="button">
                                <i class="fas fa-history me-2"></i>Recent Transactions
                            </button>
                        </li>
                    </ul>
                </div>

                <div class="card-body p-0">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="inventory">
                            <div class="table-responsive" style="max-height: 400px;">
                                <table class="table table-hover table-dark mb-0 text-white-50 align-middle">
                                    <thead class="sticky-top bg-black">
                                        <tr>
                                            <th>Item ID</th>
                                            <th>Qty</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (inventory != null && inventory.Any())
                                        {
                                            foreach (var item in inventory)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="bg-secondary rounded me-2" style="width: 32px; height: 32px;">
                                                                 <i class="fas fa-cube text-white m-2"></i>
                                                            </div>
                                                            <div>
                                                                <span class="text-white fw-bold">@item.ItemID</span>
                                                                <div class="small font-monospace" style="font-size: 10px;">@item.InventoryId</div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-white fw-bold">x @item.Quantity</td>
                                                    <td>
                                                        @if (item.IsEquipped) { <span class="badge bg-success">EQUIPPED</span> }
                                                        @if (item.UpgradeLevel > 0) { <span class="badge bg-danger">+@item.UpgradeLevel</span> }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr><td colspan="3" class="text-center py-4">Empty Inventory</td></tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="logs">
                            <div class="table-responsive" style="max-height: 400px;">
                                <table class="table table-hover table-dark mb-0 text-white-50 small align-middle">
                                    <thead class="sticky-top bg-black">
                                        <tr>
                                            <th>Time</th>
                                            <th>Action</th>
                                            <th>Details</th>
                                            <th>Change</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (logs != null && logs.Any())
                                        {
                                            foreach (var log in logs)
                                            {
                                                <tr>
                                                    <td>@log.CreatedAt.ToString("MM/dd HH:mm")</td>
                                                    <td>
                                                        @if (log.ActionType == "TRANSACTION") { <span class="badge bg-success bg-opacity-75">BUY</span> }
                                                        else if (log.ActionType == "GIFT") { <span class="badge bg-warning text-dark">GIFT</span> }
                                                        else { <span class="badge bg-secondary">@log.ActionType</span> }
                                                    </td>
                                                    <td class="text-white">
                                                        @log.Details
                                                        @if(!string.IsNullOrEmpty(log.ItemId)) { <div class="text-info small opacity-75">Ref: @log.ItemId</div> }
                                                    </td>
                                                    <td>
                                                        @if (log.Amount != 0)
                                                        {
                                                            bool isPos = log.Amount > 0;
                                                            string color = isPos ? "text-success" : "text-danger";
                                                            string icon = (log.CurrencyType == "RES_GEM") ? "far fa-gem" : "fas fa-coins";
                                                            string currColor = (log.CurrencyType == "RES_GEM") ? "text-info" : "text-warning";

                                                            <span class="@color fw-bold">
                                                                @(isPos ? "+" : "")@log.Amount 
                                                            </span>
                                                            <span class="@currColor ms-1">
                                                                <i class="@icon"></i>
                                                            </span>
                                                        }
                                                        else { <span>-</span> }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr><td colspan="4" class="text-center py-4">No recent activity</td></tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Lấy danh sách tất cả các nút Tab trong cụm #userTabs
        const tabs = document.querySelectorAll('#userTabs button');

        tabs.forEach(tab => {
            tab.addEventListener('show.bs.tab', function (event) {
                // 1. RESET tất cả các nút về trạng thái "Chìm" (Màu xám, không gạch chân)
                tabs.forEach(t => {
                    t.classList.remove('text-info', 'border-info', 'border-bottom', 'border-3', 'active');
                    t.classList.add('text-secondary');
                });

                // 2. KÍCH HOẠT nút vừa bấm lên trạng thái "Nổi" (Màu xanh, có gạch chân)
                // 'event.target' chính là nút vừa được bấm
                event.target.classList.remove('text-secondary');
                event.target.classList.add('text-info', 'border-info', 'border-bottom', 'border-3', 'active');
            });
        });
    });
</script>