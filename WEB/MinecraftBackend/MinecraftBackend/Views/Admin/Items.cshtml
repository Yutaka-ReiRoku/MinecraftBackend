@model IEnumerable<MinecraftBackend.Models.ShopItem>

@{
    ViewData["Title"] = ViewBag.Title;
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<div class="glass-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-white mb-0"><i class="fas fa-box-open me-2 text-warning"></i>@ViewData["Title"]</h2>
        <a asp-action="CreateItem" class="btn btn-warning fw-bold"><i class="fas fa-plus me-1"></i> Add New Item</a>
    </div>

    <form method="get" class="mb-4">
        <input type="hidden" name="tab" value="@ViewBag.CurrentTab" />
        <div class="row g-2">
            <div class="col-md-3">
                <input type="text" name="search" class="form-control bg-dark text-white border-secondary" placeholder="Search by name or ID..." value="@ViewBag.CurrentSearch">
            </div>
            <div class="col-md-2">
                <select name="typeFilter" class="form-select bg-dark text-white border-secondary" onchange="this.form.submit()">
                    <option value="">All Types</option>
                    @foreach (var t in ViewBag.AvailableTypes) { <option value="@t" selected="@(ViewBag.CurrentType == t)">@t</option> }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-info w-100"><i class="fas fa-filter"></i> Filter</button>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover table-dark mb-0 align-middle">
            <thead class="bg-black">
                <tr>
                    <th>Image</th>
                    <th><a asp-action="Items" asp-route-sortOrder="@ViewBag.NameSortParm" class="text-white text-decoration-none">ID / Name <i class="fas fa-sort"></i></a></th>
                    <th><a asp-action="Items" asp-route-sortOrder="@ViewBag.TypeSortParm" class="text-white text-decoration-none">Type <i class="fas fa-sort"></i></a></th>
                    <th><a asp-action="Items" asp-route-sortOrder="@ViewBag.PriceSortParm" class="text-white text-decoration-none">Price <i class="fas fa-sort"></i></a></th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td><img src="@item.ImageURL" width="40" height="40" class="rounded border border-secondary bg-black p-1"></td>
                        <td>
                            <div class="fw-bold text-white">@item.Name</div>
                            <div class="small text-white-50 font-monospace">@item.ProductID</div>
                        </td>
                        <td><span class="badge bg-secondary">@item.ItemType</span> <span class="badge bg-dark border border-secondary">@item.Rarity</span></td>
                        <td>
                            @if (item.PriceCurrency == "RES_GOLD") { <span class="text-warning fw-bold">@item.PriceAmount G</span> }
                            else if (item.PriceCurrency == "RES_GEM") { <span class="text-info fw-bold">@item.PriceAmount Gem</span> }
                            else { <span class="text-muted">Free</span> }
                        </td>
                        <td class="text-end">
                            <a asp-action="EditItem" asp-route-id="@item.ProductID" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></a>
                            <a asp-action="DeleteItem" asp-route-id="@item.ProductID" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this item?')"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-secondary" asp-action="Items" 
                       asp-route-page="@(currentPage - 1)" asp-route-search="@ViewBag.CurrentSearch" asp-route-tab="@ViewBag.CurrentTab">Previous</a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link @(i == currentPage ? "bg-info border-info" : "bg-dark text-white border-secondary")" 
                           asp-action="Items" asp-route-page="@i" asp-route-search="@ViewBag.CurrentSearch" asp-route-tab="@ViewBag.CurrentTab">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-secondary" asp-action="Items" 
                       asp-route-page="@(currentPage + 1)" asp-route-search="@ViewBag.CurrentSearch" asp-route-tab="@ViewBag.CurrentTab">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>