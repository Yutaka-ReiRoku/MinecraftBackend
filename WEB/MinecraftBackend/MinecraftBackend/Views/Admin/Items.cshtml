@model IEnumerable<MinecraftBackend.Models.ShopItem>

@{
    ViewData["Title"] = ViewBag.Title;
    string currentTab = ViewBag.CurrentTab as string ?? "shop";
    string currentType = ViewBag.CurrentType as string ?? "";
    string currentRarity = ViewBag.CurrentRarity as string ?? "";
    string currentCurrency = ViewBag.CurrentCurrency as string ?? "";
    string currentSort = ViewBag.CurrentSort as string ?? "";
    
    // Các danh sách dữ liệu để đổ vào Dropdown
    var types = ViewBag.AvailableTypes as List<string>;
    var rarities = ViewBag.AvailableRarities as List<string>;
    var currencies = ViewBag.AvailableCurrencies as List<string>;
}

<div class="glass-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="text-white mb-0">
                @if (currentTab == "shop") { <i class="fas fa-store text-warning me-2"></i><span>Shop Listings</span> }
                else { <i class="fas fa-database text-info me-2"></i><span>Game Assets Database</span> }
            </h2>
            <p class="text-white-50 small mb-0">Manage items, prices, and internal game data assets.</p>
        </div>
        <a asp-action="CreateItem" class="btn btn-info text-white rounded-pill px-4 shadow-lg fw-bold">
            <i class="fas fa-plus me-2"></i> Create New
        </a>
    </div>

    <ul class="nav nav-pills mb-4 border-bottom border-secondary pb-3">
        <li class="nav-item me-2">
            <a class="nav-link @(currentTab == "shop" ? "active bg-warning text-dark fw-bold" : "text-white")" 
               asp-action="Items" asp-route-tab="shop">
                <i class="fas fa-shopping-cart me-2"></i> Merchandise (On Sale)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentTab == "data" ? "active bg-info text-dark fw-bold" : "text-white")" 
               asp-action="Items" asp-route-tab="data">
                <i class="fas fa-cube me-2"></i> Internal Game Data (Assets)
            </a>
        </li>
    </ul>

    <form method="get" asp-action="Items" id="filterForm">
        <input type="hidden" name="tab" value="@currentTab" />
        <input type="hidden" name="sortOrder" value="@currentSort" />

        <div class="d-flex justify-content-end mb-3">
             <button type="submit" class="btn btn-outline-info">
                 <i class="fas fa-filter me-1"></i> Apply Filters
             </button>
             <a asp-action="Items" asp-route-tab="@currentTab" class="btn btn-outline-secondary ms-2" title="Reset Filters">
                 <i class="fas fa-sync-alt"></i>
             </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 text-white">
                <thead class="bg-white bg-opacity-10 text-uppercase text-info small border-bottom border-info">
                    <tr>
                        <th class="ps-4" style="width: 30%;">
                            <a asp-action="Items" asp-route-sortOrder="@ViewBag.NameSortParm" 
                               asp-route-search="@ViewBag.CurrentSearch" asp-route-tab="@currentTab" asp-route-typeFilter="@currentType" asp-route-rarityFilter="@currentRarity"
                               class="text-decoration-none text-info d-block">
                                Name & ID <i class="fas fa-sort ms-1"></i>
                            </a>
                        </th>
                        <th style="width: 15%;">
                            <a asp-action="Items" asp-route-sortOrder="@ViewBag.TypeSortParm" 
                               asp-route-search="@ViewBag.CurrentSearch" asp-route-tab="@currentTab" asp-route-typeFilter="@currentType" asp-route-rarityFilter="@currentRarity"
                               class="text-decoration-none text-info d-block">
                                Category <i class="fas fa-sort ms-1"></i>
                            </a>
                        </th>
                        <th style="width: 15%;">
                             <a asp-action="Items" asp-route-sortOrder="@ViewBag.RaritySortParm" 
                               asp-route-search="@ViewBag.CurrentSearch" asp-route-tab="@currentTab" asp-route-typeFilter="@currentType" asp-route-rarityFilter="@currentRarity"
                               class="text-decoration-none text-info d-block">
                                Rarity <i class="fas fa-sort ms-1"></i>
                            </a>
                        </th>
                        
                        @if(currentTab == "shop")
                        {
                            <th style="width: 25%;">
                                <a asp-action="Items" asp-route-sortOrder="@ViewBag.PriceSortParm" 
                                   asp-route-search="@ViewBag.CurrentSearch" asp-route-tab="@currentTab" asp-route-typeFilter="@currentType" asp-route-rarityFilter="@currentRarity"
                                   class="text-decoration-none text-info d-block">
                                    Price Range <i class="fas fa-sort ms-1"></i>
                                </a>
                            </th>
                        }
                        else
                        {
                             <th>Asset Path</th>
                        }
                        <th class="text-end pe-4">Actions</th>
                    </tr>

                    <tr class="bg-dark">
                        <th class="ps-4 py-2">
                             <div class="input-group input-group-sm">
                                <span class="input-group-text bg-secondary border-0 text-white"><i class="fas fa-search"></i></span>
                                <input type="text" name="search" class="form-control bg-dark border-secondary text-white" 
                                       placeholder="Filter Name/ID..." value="@ViewBag.CurrentSearch" onchange="this.form.submit()">
                            </div>
                        </th>
                        <th class="py-2">
                            <select name="typeFilter" class="form-select form-select-sm bg-dark border-secondary text-white" onchange="this.form.submit()">
                                <option value="">- All Types -</option>
                                @if (types != null) { foreach (var t in types) { <option value="@t" selected="@(currentType == t)">@t</option> } }
                            </select>
                        </th>
                         <th class="py-2">
                            <select name="rarityFilter" class="form-select form-select-sm bg-dark border-secondary text-white" onchange="this.form.submit()">
                                <option value="">- All Rarities -</option>
                                @if (rarities != null) { foreach (var r in rarities) { <option value="@r" selected="@(currentRarity == r)">@r</option> } }
                            </select>
                        </th>

                        @if(currentTab == "shop")
                        {
                            <th class="py-2">
                                <div class="d-flex gap-1">
                                    <input type="number" name="minPrice" class="form-control form-control-sm bg-dark border-secondary text-white" 
                                           placeholder="Min" value="@ViewBag.CurrentMinPrice" style="width: 70px;">
                                    <span class="text-white-50">-</span>
                                    <input type="number" name="maxPrice" class="form-control form-control-sm bg-dark border-secondary text-white" 
                                           placeholder="Max" value="@ViewBag.CurrentMaxPrice" style="width: 70px;">
                                    
                                    <select name="currencyFilter" class="form-select form-select-sm bg-dark border-secondary text-white" style="width: 80px;" onchange="this.form.submit()">
                                        <option value="">All</option>
                                        @if (currencies != null) { 
                                            foreach (var c in currencies) { 
                                                <option value="@c" selected="@(currentCurrency == c)">@(c == "RES_GOLD" ? "Gold" : "Gem")</option> 
                                            } 
                                        }
                                    </select>
                                </div>
                            </th>
                        }
                        else
                        {
                            <th class="py-2 text-white-50 small"><i>Read-only path</i></th>
                        }
                        <th class="py-2"></th> </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="position-relative me-3">
                                            <img src="@(item.ImageURL ?? "/images/others/default.png")" 
                                                 class="rounded-3 border border-secondary shadow-sm" 
                                                 width="48" height="48" 
                                                 style="object-fit: contain; background-color: rgba(0,0,0,0.3);"
                                                 onerror="this.src='/images/others/default.png'">
                                        </div>
                                        <div>
                                            <div class="fw-bold text-black">@item.Name</div>
                                            <div class="font-monospace text-secondary small" style="font-size: 0.75rem;">ID: @item.ProductID</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill border border-info text-info bg-info bg-opacity-10">@item.ItemType</span>
                                </td>
                                <td>
                                    @{
                                        string badgeClass = item.Rarity?.ToLower() switch {
                                            "common" => "bg-secondary",
                                            "rare" => "bg-primary",
                                            "epic" => "bg-info text-dark",
                                            "legendary" => "bg-warning text-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass bg-opacity-75">@item.Rarity</span>
                                </td>
                            
                                @if(currentTab == "shop")
                                {
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if(item.PriceCurrency == "RES_GOLD")
                                            {
                                                <i class="fas fa-coins text-warning me-2"></i> <span class="text-warning fw-bold">@item.PriceAmount G</span>
                                            }
                                            else
                                            {
                                                <i class="far fa-gem text-info me-2"></i> <span class="text-info fw-bold">@item.PriceAmount Gem</span>
                                            }
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <code class="text-black-50 small d-block user-select-all" style="word-break: break-all;">@item.ImageURL</code>
                                    </td>
                                }

                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="EditItem" asp-route-id="@item.ProductID" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="DeleteItem" asp-route-id="@item.ProductID" class="btn btn-sm btn-outline-danger" title="Delete" onclick="return confirm('Delete this item?');">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-white-50">
                                <i class="fas fa-box-open fa-3x mb-3 opacity-25"></i>
                                <p>No items found matching the filters in <strong>@currentTab</strong>.</p>
                                
                                @if(currentTab == "data")
                                {
                                    <button type="submit" formaction="@Url.Action("SeedDataStrict")" formmethod="post" class="btn btn-outline-success btn-sm">
                                         <i class="fas fa-magic me-2"></i> Seed Assets from wwwroot
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form> @if (ViewBag.TotalPages > 1)
    {
        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top border-secondary">
            <div class="text-white-50 small">
                Showing page <span class="text-info fw-bold">@ViewBag.CurrentPage</span> of @ViewBag.TotalPages
            </div>

            <div class="btn-group shadow-sm">
                @{
                    string GetPageUrl(int p) => Url.Action("Items", new { 
                        page = p, 
                        search = ViewBag.CurrentSearch, 
                        sortOrder = ViewBag.CurrentSort, 
                        tab = currentTab, 
                        typeFilter = currentType,
                        rarityFilter = currentRarity,
                        currencyFilter = currentCurrency,
                        minPrice = ViewBag.CurrentMinPrice,
                        maxPrice = ViewBag.CurrentMaxPrice
                    });
                }

                <a href="@GetPageUrl(ViewBag.CurrentPage - 1)" 
                   class="btn btn-outline-secondary btn-sm @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                    <i class="fas fa-chevron-left me-1"></i> Prev
                </a>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    if (ViewBag.TotalPages <= 10 || (i >= ViewBag.CurrentPage - 2 && i <= ViewBag.CurrentPage + 2) || i == 1 || i == ViewBag.TotalPages)
                    {
                        <a href="@GetPageUrl(i)" 
                           class="btn btn-sm @(i == ViewBag.CurrentPage ? "btn-info fw-bold" : "btn-outline-secondary text-white-50")">
                           @i
                        </a>
                    }
                    else if (i == ViewBag.CurrentPage - 3 || i == ViewBag.CurrentPage + 3)
                    {
                        <span class="btn btn-sm btn-outline-secondary disabled border-0">...</span>
                    }
                }

                <a href="@GetPageUrl(ViewBag.CurrentPage + 1)" 
                   class="btn btn-outline-secondary btn-sm @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                    Next <i class="fas fa-chevron-right ms-1"></i>
                </a>
            </div>
        </div>
    }
</div>