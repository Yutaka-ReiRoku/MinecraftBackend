@model IEnumerable<MinecraftBackend.Models.PlayerProfile>

@{
    ViewData["Title"] = "Player Management";
}

<div class="glass-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-white mb-0"><i class="fas fa-users text-primary me-2"></i>Player Base</h2>
            <p class="text-white-50 small mb-0">Manage accounts, status, and inventory.</p>
        </div>
        
        @* [ĐÃ SỬA] Nút tạo người chơi mới hoạt động thật *@
        <a asp-action="CreateUser" class="btn btn-success text-white rounded-pill px-4 shadow-lg fw-bold">
            <i class="fas fa-user-plus me-2"></i> New Player
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success bg-success bg-opacity-25 text-white border-0 mb-4">
            <i class="fas fa-check-circle me-2"></i> @TempData["Message"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger bg-danger bg-opacity-25 text-white border-0 mb-4">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0 text-white">
            <thead class="bg-white bg-opacity-10 text-uppercase text-info small border-bottom border-info">
                <tr>
                    <th class="ps-4">Avatar</th>
                    <th>Identity</th>
                    <th>Stats & Economy</th>
                    <th>Status</th>
                    <th class="text-end pe-4">GM Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="position-relative" style="width: 50px;">
                                    <img src="@(p.AvatarUrl ?? "/images/avatars/default.png")"
                                         class="rounded-circle border border-2 border-primary bg-dark shadow-sm"
                                         width="50" height="50" style="object-fit:cover;"
                                         onerror="this.src='/images/avatars/default.png'">
                                    
                                    @if(p.User.Status == "Active") {
                                        <span class="position-absolute bottom-0 end-0 p-1 bg-success border border-dark rounded-circle"></span>
                                    } else {
                                        <span class="position-absolute bottom-0 end-0 p-1 bg-danger border border-dark rounded-circle"></span>
                                    }
                                </div>
                            </td>
                            <td>
                                <h5 class="mb-0 text-warning fw-bold">@p.DisplayName</h5>
                                <small class="text-black-50"><i class="fas fa-envelope me-1"></i>@p.User.Email</small>
                                <div class="small font-monospace text-muted mt-1" style="font-size: 0.75rem;">ID: @p.UserId</div>
                            </td>
                            <td>
                                <div class="d-flex flex-column gap-1">
                                    <div class="badge bg-dark border border-secondary text-start">
                                        <i class="fas fa-star text-warning me-1"></i> Lv.@p.Level <span class="text-muted ms-1">(@p.Exp XP)</span>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <span class="text-warning small fw-bold"><i class="fas fa-coins"></i> @p.Gold.ToString("N0")</span>
                                        <span class="text-info small fw-bold"><i class="far fa-gem"></i> @p.Gem.ToString("N0")</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (p.User.Status == "Active")
                                {
                                    <span class="badge bg-success bg-opacity-75"><i class="fas fa-check-circle me-1"></i>Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-75"><i class="fas fa-ban me-1"></i>Banned</span>
                                }
                                <div class="small text-white-50 mt-1">Mode: @p.GameMode</div>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="UserDetails" asp-route-id="@p.UserId" class="btn btn-sm btn-outline-info" title="Inspect">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    <a asp-action="EditUser" asp-route-id="@p.UserId" class="btn btn-sm btn-outline-primary" title="Edit Profile">
                                        <i class="fas fa-user-edit"></i>
                                    </a>

                                    <button type="button" class="btn btn-sm btn-outline-warning"
                                            onclick="openGiftModal('@p.UserId', '@p.DisplayName')" title="Send Gift">
                                        <i class="fas fa-gift"></i>
                                    </button>

                                    <button type="button" class="btn btn-sm btn-outline-dark"
                                            onclick="openPassModal('@p.User.Id', '@p.DisplayName')" title="Reset Password">
                                        <i class="fas fa-key"></i>
                                    </button>

                                    <a asp-action="ToggleUserStatus" asp-route-id="@p.User.Id"
                                       class="btn btn-sm @(p.User.Status == "Active" ? "btn-outline-danger" : "btn-outline-success")"
                                       title="@(p.User.Status == "Active" ? "Ban User" : "Unban User")"
                                       onclick="return confirm('Bạn có chắc chắn muốn thay đổi trạng thái người chơi này không?')">
                                        <i class="fas @(p.User.Status == "Active" ? "fa-ban" : "fa-unlock")"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-center py-5 text-white-50">No players found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* --- MODAL: RESET PASSWORD (ĐÃ SỬA ĐỂ HOẠT ĐỘNG THẬT) --- *@
<div class="modal fade" id="passModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title text-warning"><i class="fas fa-key me-2"></i>Reset Password</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            
            <form asp-action="ResetUserPassword" method="post">
                <div class="modal-body">
                    <p>Đặt lại mật khẩu cho: <strong id="passUserName" class="text-info"></strong></p>
                    
                    <input type="hidden" name="userId" id="passUserId" />

                    <div class="mb-3">
                        <label class="form-label text-white-50">Mật khẩu mới</label>
                        <input type="text" name="newPassword" class="form-control bg-black text-white border-secondary" placeholder="Nhập mật khẩu mới..." required minlength="6">
                        <small class="text-white-50 fst-italic">*Admin có quyền đặt lại mật khẩu mà không cần mật khẩu cũ.</small>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-warning fw-bold">Xác nhận đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* --- MODAL: GIVING GIFTS (ĐÃ TÍCH HỢP) --- *@
<div class="modal fade" id="giftModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white border-warning">
            <div class="modal-header border-secondary bg-warning bg-opacity-10">
                <h5 class="modal-title text-warning"><i class="fas fa-gift me-2"></i>GM Gift System</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="GiveGift" method="post">
                <div class="modal-body">
                    <p>Gửi quà tặng tới: <strong id="giftUserName" class="text-white"></strong></p>
                    <input type="hidden" name="userId" id="giftUserId">

                    <div class="mb-3">
                        <label class="form-label small text-white-50">Loại quà tặng</label>
                        <select name="type" class="form-select bg-black text-white border-secondary" onchange="toggleGiftInput(this.value)">
                            <option value="Gold">Gold Currency (Vàng)</option>
                            <option value="Gem">Gem Currency (Đá quý)</option>
                            <option value="Item">Specific Item (Vật phẩm)</option>
                        </select>
                    </div>

                    <div class="mb-3" id="itemInputGroup" style="display:none;">
                        <label class="form-label small text-white-50">Item ID (Mã vật phẩm)</label>
                        <input name="itemId" class="form-control bg-black text-white border-secondary" placeholder="Ví dụ: WEP_DIAMOND_SWORD">
                    </div>

                    <div class="mb-3">
                        <label class="form-label small text-white-50">Số lượng</label>
                        <input type="number" name="amount" class="form-control bg-black text-white border-secondary" value="100" min="1">
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-warning fw-bold">Gửi quà ngay</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
        // Tìm tất cả các Modal trong trang này
        var modals = document.querySelectorAll('.modal');
        // Chuyển chúng ra ngoài thẻ body để không bị các div khác đè lên
        modals.forEach(function(modal) {
            document.body.appendChild(modal);
        });
    });

    // Xử lý Modal Đổi Mật Khẩu
    function openPassModal(id, name) {
        document.getElementById('passUserName').innerText = name;
        document.getElementById('passUserId').value = id;
        
        // Reset ô input mỗi lần mở lên
        let passInput = document.getElementsByName('newPassword')[0];
        if(passInput) passInput.value = '';
        
        new bootstrap.Modal(document.getElementById('passModal')).show();
    }

    // Xử lý Modal Tặng Quà
    function openGiftModal(id, name) {
        document.getElementById('giftUserId').value = id;
        document.getElementById('giftUserName').innerText = name;
        new bootstrap.Modal(document.getElementById('giftModal')).show();
    }

    // Ẩn hiện ô nhập ItemID dựa vào loại quà
    function toggleGiftInput(val) {
        document.getElementById('itemInputGroup').style.display = (val === 'Item') ? 'block' : 'none';
    }
</script>