@model MinecraftBackend.Models.ShopItem

@{
    ViewData["Title"] = "Create Shop Item";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="glass-card">
            <h3 class="text-white mb-4 border-bottom border-secondary pb-2">
                <i class="fas fa-plus-circle text-success me-2"></i>Create New Product
            </h3>

            <form asp-action="CreateItem" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-white-50 small">Product ID (Unique)</label>
                        <input asp-for="ProductID" class="form-control bg-dark text-white border-secondary" placeholder="e.g. WEP_DIAMOND_SWORD" required />
                        <span asp-validation-for="ProductID" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-white-50 small">Display Name</label>
                        <input asp-for="Name" class="form-control bg-dark text-white border-secondary" placeholder="e.g. Diamond Sword" required />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-white-50 small">Item Type</label>
                        <select asp-for="ItemType" class="form-select bg-dark text-white border-secondary">
                            <option value="Weapon">Weapon</option>
                            <option value="Armor">Armor</option>
                            <option value="Consumable">Consumable (Food/Potion)</option>
                            <option value="Resource">Resource (Material)</option>
                            <option value="Bundle">Bundle (Gacha Box)</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-white-50 small">Rarity</label>
                        <select asp-for="Rarity" class="form-select bg-dark text-white border-secondary">
                            <option value="Common" class="text-secondary">Common (Gray)</option>
                            <option value="Rare" class="text-primary">Rare (Blue)</option>
                            <option value="Epic" class="text-info">Epic (Purple)</option>
                            <option value="Legendary" class="text-warning">Legendary (Orange)</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-white-50 small">Price Amount</label>
                        <input asp-for="PriceAmount" type="number" class="form-control bg-dark text-white border-secondary" value="100" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-white-50 small">Currency</label>
                        <select asp-for="PriceCurrency" class="form-select bg-dark text-white border-secondary">
                            <option value="RES_GOLD">Gold Coin</option>
                            <option value="RES_GEM">Gem (Premium)</option>
                        </select>
                    </div>

                    <div class="col-12">
    <div class="form-check form-switch mt-2">
        <input class="form-check-input" type="checkbox" asp-for="IsShow" style="cursor: pointer; width: 3em; height: 1.5em;">
        <label class="form-check-label text-white fw-bold ms-3 pt-1" asp-for="IsShow">
            Show in Shop immediately?
        </label>
    </div>
    <div class="text-white-50 small mt-1">If unchecked, players cannot see or buy this item.</div>
</div>

                    <div class="col-12">
                        <label class="form-label text-white-50 small">Product Image</label>
                        <input type="file" name="imageFile" class="form-control bg-dark text-white border-secondary" accept="image/*" />
                    </div>

                    <div class="col-12">
                        <label class="form-label text-white-50 small">Target Inventory ID (Optional)</label>
                        <input asp-for="TargetItemID" class="form-control bg-dark text-white border-secondary font-monospace" placeholder="Leave empty to use Product ID" />
                        <small class="text-white-50">This is the actual Item ID stored in Inventory.</small>
                    </div>

                    <div class="col-12">
                        <label class="form-label text-white-50 small">Description</label>
                        <textarea asp-for="Description" class="form-control bg-dark text-white border-secondary" rows="3"></textarea>
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top border-secondary d-flex justify-content-end gap-2">
                    <a asp-action="Items" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-success fw-bold px-4">Create Product</button>
                </div>
            </form>
        </div>
    </div>
</div>