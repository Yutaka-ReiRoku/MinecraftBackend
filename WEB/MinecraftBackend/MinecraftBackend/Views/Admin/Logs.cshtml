@model IEnumerable<MinecraftBackend.Models.Transaction>

@{
    ViewData["Title"] = "System Logs";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<div class="glass-card">
    <h2 class="text-white mb-4"><i class="fas fa-history me-2 text-info"></i>System Transaction Logs</h2>

    <form method="get" class="mb-4">
        <div class="row g-2">
            <div class="col-md-3">
                <input type="text" name="search" class="form-control bg-dark text-white border-secondary" placeholder="Search details..." value="@ViewBag.CurrentSearch">
            </div>
            <div class="col-md-2">
                <input type="text" name="userId" class="form-control bg-dark text-white border-secondary" placeholder="User ID..." value="@ViewBag.CurrentUserId">
            </div>
            <div class="col-md-2">
                <select name="type" class="form-select bg-dark text-white border-secondary">
                    <option value="">All Actions</option>
                    @foreach (var t in ViewBag.Types) { <option value="@t" selected="@(ViewBag.CurrentType == t)">@t</option> }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-info w-100">Filter</button>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover table-dark mb-0 text-white-50 small align-middle">
            <thead class="bg-black">
                <tr>
                    <th><a asp-action="Logs" asp-route-sortOrder="@ViewBag.DateSortParm" class="text-white text-decoration-none">Time <i class="fas fa-sort"></i></a></th>
                    <th>User</th>
                    <th>Action</th>
                    <th>Details</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@item.CreatedAt.ToString("MM/dd HH:mm:ss")</td>
                        <td class="font-monospace text-info">@item.UserId.Substring(0, 8)...</td>
                        <td><span class="badge bg-secondary">@item.ActionType</span></td>
                        <td>@item.Details</td>
                        <td>
                            @if (item.Amount != 0) {
                                var color = item.Amount > 0 ? "text-success" : "text-danger";
                                <span class="@color fw-bold">@item.Amount @(item.CurrencyType=="RES_GOLD"?"G":"Gem")</span>
                            } else { <span>-</span> }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-secondary" asp-action="Logs" 
                       asp-route-page="@(currentPage - 1)" asp-route-search="@ViewBag.CurrentSearch" asp-route-type="@ViewBag.CurrentType">Previous</a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link @(i == currentPage ? "bg-info border-info" : "bg-dark text-white border-secondary")" 
                           asp-action="Logs" asp-route-page="@i" asp-route-search="@ViewBag.CurrentSearch" asp-route-type="@ViewBag.CurrentType">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-secondary" asp-action="Logs" 
                       asp-route-page="@(currentPage + 1)" asp-route-search="@ViewBag.CurrentSearch" asp-route-type="@ViewBag.CurrentType">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>