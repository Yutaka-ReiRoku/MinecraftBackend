@model IEnumerable<MinecraftBackend.Models.Transaction>

@{
    ViewData["Title"] = "System Logs";
    var activityTypes = ViewBag.Types as List<string>;
}

<div class="glass-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-white mb-0"><i class="fas fa-history text-info me-2"></i>Transaction History</h2>
            <p class="text-white-50 small mb-0">Monitor server economy and player activities.</p>
        </div>
        <a asp-action="Logs" class="btn btn-outline-light btn-sm"><i class="fas fa-sync me-1"></i> Refresh</a>
    </div>

    <form method="get" class="row g-3 mb-4 p-3 bg-black bg-opacity-25 rounded border border-secondary">
        <div class="col-md-3">
            <label class="form-label small text-info fw-bold">Action Type</label>
            <select name="type" class="form-select bg-dark text-white border-secondary">
                <option value="All">All Actions</option>
                @if (activityTypes != null)
                {
                    foreach (var t in activityTypes)
                    {
                        <option value="@t" selected="@(Context.Request.Query["type"] == t)">@t</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label small text-info fw-bold">User ID</label>
            <input type="text" name="userId" class="form-control bg-dark text-white border-secondary" placeholder="Filter by User ID..." value="@Context.Request.Query["userId"]" />
        </div>
        <div class="col-md-3">
            <label class="form-label small text-info fw-bold">Date</label>
            <input type="date" name="date" class="form-control bg-dark text-white border-secondary" value="@Context.Request.Query["date"]" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-info w-100 fw-bold"><i class="fas fa-filter me-2"></i> Apply Filters</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0 text-white font-monospace small">
            <thead class="bg-white bg-opacity-10 text-uppercase text-info border-bottom border-info">
                <tr>
                    <th style="width: 15%;">Created At</th> <th style="width: 20%;">User / Character</th>
                    <th style="width: 10%;">Action</th>
                    <th style="width: 30%;">Details & Item</th>
                    <th style="width: 15%;">Amount & Currency</th> </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var log in Model)
                    {
                        <tr>
                            <td class="text-white-50">@log.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                <a asp-action="UserDetails" asp-route-id="@log.UserId" class="text-decoration-none text-warning">
                                    <i class="fas fa-user-circle me-1"></i> @log.UserId.Substring(0, Math.Min(8, log.UserId.Length))...
                                </a>
                            </td>
                            <td>
                                @if (log.ActionType == "TRANSACTION" || log.ActionType == "BUY") 
                                { 
                                    <span class="badge bg-success bg-opacity-75 w-100">TRANSACTION</span> 
                                }
                                else if (log.ActionType == "CRAFT" || log.ActionType == "BUILD") 
                                { 
                                    <span class="badge bg-primary bg-opacity-75 w-100">@log.ActionType</span> 
                                }
                                else if (log.ActionType == "GIFT") 
                                { 
                                    <span class="badge bg-warning text-dark w-100">GM GIFT</span> 
                                }
                                else 
                                { 
                                    <span class="badge bg-secondary bg-opacity-75 w-100">@log.ActionType</span> 
                                }
                            </td>
                            <td>
                                <div class="text-white">@log.Details</div>
                                @if (!string.IsNullOrEmpty(log.ItemId))
                                {
                                    <div class="text-info small mt-1 opacity-75">
                                        <i class="fas fa-tag me-1"></i>Ref: @log.ItemId
                                    </div>
                                }
                            </td>
                            <td>
                                @if (log.Amount != 0)
                                {
                                    bool isPositive = log.Amount > 0;
                                    string colorClass = isPositive ? "text-success" : "text-danger";
                                    string icon = log.CurrencyType == "RES_GEM" ? "far fa-gem" : "fas fa-coins";
                                    string currColor = log.CurrencyType == "RES_GEM" ? "text-info" : "text-warning";

                                    <div class="@colorClass fw-bold">
                                        @(isPositive ? "+" : "")@log.Amount
                                        <span class="@currColor ms-1" style="font-size: 0.9em;">
                                            <i class="@icon"></i> @(log.CurrencyType == "RES_GEM" ? "Gem" : "Gold")
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-black-50">
                            <i class="fas fa-search-dollar fa-3x mb-3 opacity-25"></i>
                            <p>No transactions found.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>